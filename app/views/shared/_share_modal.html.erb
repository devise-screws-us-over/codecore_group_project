<%# modal to share an idea with a bunch of teams %>
<div class="modal fade" id="<%= dom_id(idea) %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Share This Idea With:</h4>
          </div>
        <div class="modal-body">
        <%# partial to share this idea with a team %>
        <%= render partial: "/teams/share", locals: {idea: idea} %>
      </div>
    </div>
  </div>
</div>