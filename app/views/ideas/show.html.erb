<div class="container col-md-12">
  <div class="content">
    <button type="button" class="btn btn-lg">
      <%= link_to ideas_path do %>
        <i class="glyphicon glyphicon-menu-left"></i>
      <% end %>
    </button>
  </div>
  <div class="content"><h1><%= markdown(@idea.title) %></h1></div>
  <div class="content">
    <% pin = @idea.pins.find_by_user_id(current_user.id) %>
      <% if pin %>
        <%= link_to "Unpin", idea_pin_path(@idea, pin), method: :delete %>
      <% else %>
        <%= link_to "Pin Idea", idea_pins_path(@idea), method: :post %>
    <% end %>
  </div>
  <div class="content"><%= link_to " Edit", edit_idea_path(@idea), class: "btn btn-default fa fa-pencil" %></div>
</div>

<div>
  Created by <%= @idea.user.full_name %>
  <p><%= markdown(@idea.body) %></p>
  <%= button_to "Delete Idea", idea_path(@idea), method: :delete, data: {confirm: "Are you sure you want to delete this idea?"} %>
</div>

<div>
  <br>
  <%#= link_to "Pin Idea", user_pins_path, method: :post %>
  <% @idea.comments.each do |comment| %>
    <ul>
      <li>
        <%# comment.gravitor %>
        <p><%= markdown(comment.body) %></p>
        <%= link_to comment.user.full_name, profile_path(comment.user.profile) %> | 
        <%= comment.created_at %>
      </li>
      <hr>
    </ul>
  <% end %>
</div>

<div>
  <%= render partial: "/comments/comment" %>
</div>
