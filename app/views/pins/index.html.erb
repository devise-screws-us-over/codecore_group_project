<div class="content col-md-12">
  <div class="content">
      <h1>My Pinned Ideas</h1>
  </div>
</div>  

<div class="content col-md-12">
  <ul class="list-group">
    <% @pins.each do |pin| %>
      <li class="list-group-item">

        <div class="pin" id= "<%= dom_id(pin.idea) %>">
          <%= render partial: "/pins/pin_my_pins", locals: {pin: pin} %>
        </div>
          
        <span><%= link_to pin.idea.title, pin.idea %></span>

        <% if can? :edit, pin.idea %>
          <div class="ideas-list-buttons">
            <div class = "list-button">
              <button type="button" class="btn btn-lg" data-toggle="modal" data-target="#<%= dom_id(pin.idea) %>">
                <span class="fa fa-users"></span>
              </button>
            </div>
          <% end %>

          <!-- Modal to Share An Idea with A Team (hidden)-->
          <%= render partial: "/shared/share_modal", locals: {idea: pin.idea} %>        

          <% if can? :delete, pin.idea %>    
            <div class="list-button">
              <% if pin.idea.user == current_user %>
                <%= button_to idea_path(pin.idea), method: :delete, data: {confirm: "Are you sure you want to delete this idea?"}, class: "btn btn-lg" do %>
                  <span><i class="fa fa-trash-o"></i></span>
                <% end %>
              <% end %>
            </div>  
          <% end %>          
          </div>

      </li>
    <% end %>
  </ul>
</div>