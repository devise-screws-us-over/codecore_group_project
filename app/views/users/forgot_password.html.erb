<div class="centered-login">
  <div class="ideaz-logo">
    <span class="fa fa-lightbulb-o fa-5x"></span>
  </div>
  <h1>Please enter your email address for a link to reset your password:</h1>

  <div style="text-align: center">
  <%= form_tag(forgot_password_path, method: :post) do %>
    <%= text_field_tag :email %>
    <br>
    <br>
    <%= submit_tag "Reset Password", class: "btn btn-primary" %>
  <% end %>
  </div>


</div>
